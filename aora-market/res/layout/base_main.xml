<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="#00000000" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <com.gionee.aora.market.gui.view.ChildTitleView android:id="@+id/baseMarketTitleBarView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_alignParentLeft="true" android:layout_alignParentTop="true" />
    <RelativeLayout android:id="@+id/baseCenterView" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/baseMarketTitleBarView" />
    <RelativeLayout android:id="@+id/baseLoadingView" android:background="@color/main_bg" android:focusable="true" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/baseMarketTitleBarView">
        <LinearLayout android:gravity="center" android:orientation="vertical" android:layout_width="fill_parent" android:layout_height="fill_parent">
            <com.gionee.aora.market.gui.view.LoadingNewView1 android:id="@+id/base_view_loading_view" android:layout_width="wrap_content" android:layout_height="wrap_content" />
            <TextView android:textColor="@color/gray" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="正在努力加载中..." />
        </LinearLayout>
    </RelativeLayout>
    <RelativeLayout android:gravity="center" android:id="@+id/baseErrorView" android:background="@color/main_bg" android:focusable="true" android:visibility="gone" android:clickable="true" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/baseMarketTitleBarView" />
</RelativeLayout>