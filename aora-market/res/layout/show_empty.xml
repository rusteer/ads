<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:background="@color/white" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout android:gravity="center_horizontal" android:orientation="vertical" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_centerInParent="true">
        <ImageView android:id="@+id/show_empty_img" android:background="@drawable/no_golds_prompt_img" android:layout_width="wrap_content" android:layout_height="wrap_content" />
        <TextView android:textSize="@dimen/dip14" android:textColor="#ffb2b2b2" android:id="@+id/show_empty_text" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dip10" android:text="您还没有金币哦,快去赚取金币吧~!" />
        <Button android:textSize="14.0sp" android:textColor="@color/white" android:id="@+id/show_empty_btn" android:background="@drawable/centre_btn_selector" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginTop="@dimen/dip10" android:text="安装应用赚金币" />
    </LinearLayout>
</RelativeLayout>